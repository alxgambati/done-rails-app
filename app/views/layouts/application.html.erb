<!DOCTYPE html>
<html>
  <head>
    <title>Done-Rails-App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div id="app-div">
      <%= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
      <% if devise_controller? %>
        <div class="container devise-controllers col-sm-12 col-md-8 col-lg-6">
          <%= yield %>
        </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </body>
</html>
